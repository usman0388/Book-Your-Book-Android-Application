<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tab1"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/HighRatedBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:textColor="#ff4b4b"
            android:text="High Rated Books"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/HighRatedBookTitle"
            >

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:id="@+id/AllBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="All Books"
            android:textSize="24sp"
            android:layout_below="@+id/recyclerview"
            android:layout_marginTop="5dp"
            android:textColor="#ff4b4b"
            android:layout_marginLeft="5dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AllBooks"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:clipToPadding="false"
            ></androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</FrameLayout>