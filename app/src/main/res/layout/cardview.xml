<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="50px"
    android:elevation="5dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#2d2d2d"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardView_img_id"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            />

        <TextView

            android:paddingLeft="3dp"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Â£14.50"
            android:layout_below="@+id/cardView_img_id"
            />
        <ImageView
            android:id="@+id/rating_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_star"
            android:layout_alignRight="@+id/rating"
            android:layout_below="@+id/cardView_img_id"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/card_id_addCart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/rating"
            android:layout_alignParentRight="true"

            android:layout_marginBottom="1dp"
            android:clickable="true"
            android:src="@drawable/addingcart" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/cardView_img_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="3.5"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/title_id"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_below="@+id/rating"
            android:paddingBottom="8dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>